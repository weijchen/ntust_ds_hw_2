    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "Compile",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++11",
                "-o",
                "hw2.exe",
                "main.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "taskName": "Test Compile",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++11",
                "-o",
                "test.exe",
                "test.cpp"
            ]
        }
    ]
}